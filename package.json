{
	"name": "sigma-dao",
	"repository": "https://github.com/scale-it/sigmadao-ui.git",
	"packageManager": "yarn@3.2.4",
	"license": "Apache-2.0",
	"private": true,
	"engines": {
		"node": ">=16.1.0",
		"yarn": ">=3.1.0"
	},
	"workspaces": [
		"contracts/",
		"dapp/"
	],
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "latest",
		"@typescript-eslint/parser": "latest",
		"eslint": "latest",
		"eslint-plugin-vue": "latest",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.5.1"
	},
	"scripts": {
		"test": "yarn workspaces foreach -p run test",
		"test:watch": "yarn workspaces foreach run test:watch:p",
		"format": "prettier --loglevel warn --write .",
		"format:check": "prettier --check .",
		"lint": "yarn workspaces foreach -p run lint",
		"lint:check": "yarn workspaces foreach -p run lint:check"
	},
	"lint-staged": {
		"**/{src,test,scripts}/**/*.{ts,js}": [
			"eslint --fix --ext .js,.ts scripts src",
			"prettier --write src/**/*.{js,jsx,css,scss}"
		]
	}
}
